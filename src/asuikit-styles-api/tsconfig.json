      "@asuikit/tiptap": ["../asuikit-tiptap/src"],
      "@asuikit/storybook": ["../asuikit-storybook/src"]
    }
  },
  "references": [
    { "path": "../asuikit-core" },
    { "path": "../asuikit-dates" },
    { "path": "../asuikit-hooks" },
    { "path": "../asuikit-prism" },
    { "path": "../asuikit-dropzone" },
    { "path": "../asuikit-notifications" },
    { "path": "../asuikit-modals" },
    { "path": "../asuikit-carousel" },
    { "path": "../asuikit-spotlight" },
    { "path": "../asuikit-tiptap" },
    { "path": "../asuikit-storybook" }
