{
  "extends": "./tsconfig.base.json",
  "include": [
    "src/asuikit-*/src",
    "src/asuikit-*/demos",
    "./types",
    "./docs/src",
    "./scripts",
    "./configuration",
    "./configuration/types",
    "./tests"
  ],
  "exclude": [
    "public",
    ".cache",
    "configuration/jest",
    "configuration/storybook/main.js",
    "node_modules",
    "src/asuikit-*/esm/**/*",
    "src/asuikit-*/lib/**/*",
    "src/asuikit-*/cjs/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "@asuikit/*": ["src/asuikit-*/src"],
      "@demos/*": ["src/asuikit-*/src/demos"]
    }
  }
}
